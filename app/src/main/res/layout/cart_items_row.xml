<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="7dp"
    android:elevation="20dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/cart_item_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="6dp"
            android:src="@drawable/ic_launcher_background"/>

            <TextView
                android:id="@+id/cart_item_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amuse- Professional Gourmet Porcelain Dinner Plate"
                android:layout_toRightOf="@id/cart_item_image"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KSh 8,299"
            android:id="@+id/cart_item_price"
            android:layout_below="@id/cart_item_model"
            android:layout_toRightOf="@id/cart_item_image"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14 Passengers"
            android:id="@+id/cart_item_capacity"
            android:layout_below="@id/cart_item_price"
           android:layout_toRightOf="@id/cart_item_image"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>


        <ImageView
            android:id="@+id/add_cart_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_item_image"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/ic_baseline_add_circle_24" />
        <TextView
            android:id="@+id/items_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/add_cart_car"
            android:layout_below="@id/cart_item_image"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_remove_circle_24"
            android:layout_below="@id/cart_item_image"
            android:id="@+id/minus_cart_item"
            android:visibility="visible"
            android:layout_toLeftOf="@id/items_num"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/remove_item_disabled"
            android:visibility="invisible"
            android:layout_below="@id/cart_item_image"
            android:id="@+id/minus_cart_item_disabled"
            android:layout_toLeftOf="@id/items_num"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_delete_24"
            android:layout_alignParentLeft="true"
            android:id="@+id/delete_cart_item"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@id/cart_item_image"
            android:layout_marginLeft="6dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>