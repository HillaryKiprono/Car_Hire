<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ViewCarActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/carCapacityCart"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input_type"
            android:editable="false"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="8"

            android:textAlignment="center"
            android:textColor="@color/teal_700"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/carModelCart"
            app:layout_constraintTop_toTopOf="@+id/carModelCart" />

        <ImageView
            android:id="@+id/carimageCart"
            android:layout_width="120dp"
            android:layout_height="250dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/input_type"
            android:src="@drawable/car2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Price"
            android:textColor="@color/teal_700"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/carimageCart"
            app:layout_constraintTop_toTopOf="@+id/carimageCart" />

        <EditText
            android:id="@+id/carPriceCart"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:background="@drawable/input_type"
            android:ems="10"
            android:textColor="@color/teal_700"
            android:editable="false"
            android:inputType="textPersonName"
            android:textStyle="bold"
            android:text="Ksh2500"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Model"
            android:textColor="@color/teal_700"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/carPriceCart"
            app:layout_constraintTop_toBottomOf="@+id/carPriceCart" />

        <EditText
            android:id="@+id/carModelCart"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/input_type"
            android:editable="false"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Toyota"
            android:textAlignment="center"
            android:textColor="@color/teal_700"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="Seating Capacity"
            android:textColor="@color/teal_700"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.432"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Description"
            android:textColor="@color/teal_700"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/carCapacityCart"
            app:layout_constraintStart_toStartOf="@+id/carModelCart"
            app:layout_constraintTop_toBottomOf="@+id/carCapacityCart" />

        <EditText
            android:id="@+id/carDescriptionCart"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_type"
            android:ems="10"
            android:editable="false"
            android:inputType="textPersonName"
            android:text="  V8 engines have eight cylinders mounted in two sets of four, compared to six cylinders in a V6. V8s smoothly produce more power and provide acceleration at a faster rate"
            android:textColor="@color/teal_700"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/carCapacityCart"
            app:layout_constraintStart_toStartOf="@+id/carModelCart"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>